<?xml version="1.0" encoding="utf-8"?><extension version="2.5.0" type="component" method="upgrade">	<name>COM_J2XML</name>	<creationDate>September 2013</creationDate>	<author>Helios Ciancio</author>	<authorEmail>info@eshiol.it</authorEmail>	<authorUrl>www.eshiol.it</authorUrl>	<copyright>(C) 2010-2013, Helios Ciancio. All rights reserved.</copyright>	<license>GNU/GPL v3</license>	<version>3.1.114</version>	<description>COM_J2XML_XML_DESCRIPTION</description>	<install>		<sql>			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>		</sql>	</install>	<uninstall>		<sql>			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>		</sql>	</uninstall>		<update> 		<schemas>			<schemapath type="mysql">sql/updates</schemapath>		</schemas>	</update>		<files folder="site">		<filename>index.html</filename>		<filename>j2xml.php</filename>		<folder>controllers</folder>		<folder>helpers</folder>	</files>	<administration>		<!-- Administration Menu Section -->		<menu img="class:j2xml">com_j2xml</menu>		<submenu>			<menu link="option=com_j2xml&amp;view=cpanel" view="cpanel" img="class:cpanel" alt="J2XML/Control Panel">com_j2xml_menu_cpanel</menu>			<menu link="option=com_j2xml&amp;view=websites" view="websites" img="class:websites" alt="J2XML/Web sites">com_j2xml_menu_websites</menu>		</submenu>		<!-- Administration Main File Copy Section -->		<!-- Note the folder attribute: This attribute describes the folder			to copy FROM in the package to install therefore files copied			in this section are copied from /admin/ in the package -->		<files folder="admin">			<filename>j2xml.php</filename>			<filename>config.xml</filename>			<filename>controller.php</filename>			<filename>index.html</filename>			<folder>buttons</folder>			<folder>controllers</folder>			<folder>helpers</folder>			<folder>models</folder>			<folder>sql</folder>			<folder>tables</folder>			<folder>views</folder>		</files>			<languages folder="admin/language">			<language tag="en-GB">en-GB/en-GB.com_j2xml.ini</language>			<language tag="en-GB">en-GB/en-GB.com_j2xml.sys.ini</language>			<language tag="it-IT">it-IT/it-IT.com_j2xml.ini</language>			<language tag="it-IT">it-IT/it-IT.com_j2xml.sys.ini</language>		</languages>	</administration>	<media destination="com_j2xml" folder="media">		<folder>files</folder>		<folder>images</folder>		<folder>js</folder>	</media>	</extension>